
@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>SignIn</title>
    <link rel="stylesheet" href="~/plugins/font-awesome/css/font-awesome.min.css">
    <!-- Theme style -->
    <link rel="stylesheet" href="~/dist/css/adminlte.min.css">
    <!-- Google Font: Source Sans Pro -->
    <link href="https://fonts.googleapis.com/css?family=Source+Sans+Pro:300,400,400i,700" rel="stylesheet">
    <script src="~/Scripts/jquery-1.10.2.min.js"></script>
</head>
<body>
    <div class="row">
        <div class="container" style="max-width: 453px;">
            <br />
            <br />
            <br />
            <br />
            <br />
            <br />
            <div class="card card-info">
                <div class="card-header">
                    <h3 class="card-title">SIGN IN</h3>
                </div>
                <!-- /.card-header -->
                <!-- form start -->
                @if (ViewBag.LoginError != null)
    {
            <div class="form-group">
                <label style="color:red; font-weight:800">@ViewBag.LoginError</label>
            </div>
}

                <form class="form-horizontal">
                    <div class="card-body">
                        <div class="form-group">
                            <label for="inputEmail3" class="col-sm-2 control-label">Email</label>
                            <div class="col-sm-10">
                                <input type="text" class="form-control" id="EmailId" name="EmailId" placeholder="Email">
                            </div>
                        </div>
                        <br />

                        <div class="form-group">
                            <label for="inputPassword3" style="max-width: 22.666667%;" class="col-sm-2 control-label">Password</label>
                            <div class="col-sm-10">
                                <input type="password" class="form-control" id="Password" name="Password" placeholder="Password">
                            </div>
                        </div>

                    </div>
                    <!-- /.card-body -->
                    <div class="card-footer">
                        <button type="submit" class="btn btn-info">Sign in</button>

                    </div>
                    <!-- /.card-footer -->
                </form>
            </div>
        </div>
    </div>
</body>
</html>
<script src="~/plugins/jquery/jquery.min.js"></script>
<!-- Bootstrap 4 -->
<script src="~/plugins/bootstrap/js/bootstrap.bundle.min.js"></script>
<!-- AdminLTE App -->
<script src="~/dist/js/adminlte.min.js"></script>
<script src="~/Content/scripts/Validation.js"></script>
