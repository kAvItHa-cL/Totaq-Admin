@model List<WebApp.LoanDetail>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<!-- Content Wrapper. Contains page content -->
<div class="content-wrapper">
    <!-- Content Header (Page header) -->
    <section class="content">
        <div class="container-fluid">
            <div class="row">
                <div class="col-12">
                    <div class="card">
                        <div class="card-header">
                            <h3 class="card-title">Loan Application</h3>
                        </div>
                        <!-- /.card-header -->
                        <div class="card-body p-0">
                            <table class="table table-striped">
                                <tbody>
                                    <tr>
                                        
                                        <th>Loan Details ID</th>
                                        <th>Phone number</th>
                                        <th>Loan Amount</th>
                                        <th>Intrest Rate</th>
                                        <th>Date of loan</th>
                                        <th>Payment Date</th>
                                        <th>Payment reference No</th>
                                        <th>Due date</th>
                                        <th>Status</th>
                                    </tr>

                                    @foreach (var item in Model)
                                    {
                                    <tr>
                                        <td>@item.LoanDetailsId</td>
                                        <td>@Html.ActionLink(item.PhoneNumber, "LoanDetails", "LoanDetails", new { id = item.PhoneNumber }, null)</td>
                                        <td>@item.LoanAmount</td>
                                        <td>@item.InterestRate</td>
                                        <td>@item.DateofLoan</td>
                                        <td>@item.PaymentDate</td>
                                        <td>@item.PaymentReferenceNo</td>
                                        <td>@item.DueDate</td>
                                        <td><span class="badge bg-success">@item.LoanStatus</span></td>
                                    </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                        <!-- /.card-body -->
                    </div>
                </div>
            </div>
        </div>
    </section>
</div>